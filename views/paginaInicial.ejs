    <section class="posts-section">
        <div class="posts-title">
            <h1 class="section-title">POSTAGENS</h1>
        </div>
        <div class="post-container">
            <% posts.forEach(post => { %>
            <div class="moldura-post">
                <div class="info-left">
                    <div class="tag">
                        <p class="tag-value">#<%= post.tags %></p>
                    </div>
                    <div class="post-title-value">
                        <h3><%= post.title %></h3>
                    </div>
                    <div class="post-subtitle-value">
                        <p><%= post.synopsis %></p>
                    </div>
                    <div class="person-info-container">
                        <p class="post-date"><%= post.createdAt.toDateString() %></p>
                    </div>
                </div>
                <div class="info-right">
                    <a href="/post/<%= post.id_post %>">
                        <p class="post-extra-text">LEIA MAIS</p>
                    </a>
                </div>
            </div>
            <% }); %>
        </div>
    </section>
    

