    <section class="adm-post-section">
        <div class="interface container-adm-post-section flex">
            <h1>CENTRAL DE POSTS</h1>
            <div class="buttons-container">
                <a href="/admin/blog">
                    <button class="btn btn-left">CRIAR NOVO POST</button>
                </a>
                <a href="/admin/registro">
                    <button class="btn btn-right">Criar Novo Usuário</button>
                </a>
            </div>
            <section class="posts-section">
                <div class="post-container">
                    <% posts.forEach(post => { %>
                    <div class="moldura-post-admin">
                        <div class="info-left">
                            <div class="tag">
                                <p class="tag-value">#<%= post.tags %></p>
                            </div>
                            <div class="post-title-value">
                                <h3><%= post.title %></h3>
                            </div>
                            <div class="post-subtitle-value">
                                <p><%= post.synopsis %></p>
                            </div>
                            <div class="person-info-container">
                                <p class="post-date"><%= post.createdAt.toDateString() %></p>
                            </div>
                        </div>
                        <div class="btns-container">
                            <a href="/admin/editar/<%= post.id_post %>" class="btn-editar">Editar</a>
                            <button class="btn-excluir" data-post-id="<%= post.id_post %>">Excluir</button>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </section>
        </div>
    </section>
    


    <!-- Modal de confirmação de exclusão -->
    <div id="modal-confirmacao" class="modal">
      <div class="modal-content">
          <p>Tem certeza que deseja excluir este post?</p>
